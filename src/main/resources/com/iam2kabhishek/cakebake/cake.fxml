            <RowConstraints minHeight="32.0" valignment="CENTER" />
            <RowConstraints minHeight="32.0" prefHeight="30.0" valignment="CENTER" />
        </rowConstraints>
         <children>
            <CheckBox fx:id="lavaCheck" alignment="CENTER" mnemonicParsing="false" text="Lava Chocolate" />
